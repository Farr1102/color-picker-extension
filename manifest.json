{
  "manifest_version": 3,
  "name": "Color Picker",
  "version": "1.0.0",
  "description": "A simple color picker Chrome extension.",
  "permissions": [
    "activeTab"
  ],
  "commands": {
    "open_plugin": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Open the color picker plugin"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}